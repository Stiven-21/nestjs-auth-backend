{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      "mails/templates/**/*",
      { "include": "i18n/**/*", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
